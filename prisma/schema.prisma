generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
    id          Int         @id @default(autoincrement())
    name        String
    venueId     Int         @default(0)
    venue       Venue       @relation(fields: [venueId], references: [id])
    eventDate   Int
    createdAt   DateTime    @default(now())
}

model Venue {
    id          Int         @id @default(autoincrement())
    name        String
    events      Event[]
    capacity    Int
}
